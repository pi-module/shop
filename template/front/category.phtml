<?php if (isset($category) && !empty($category)) { ?>
    <?php
    // Set Open Graph tags for meta
    $this->doctype('HTML5');
    $this->headMeta($this->escape($category['title']), 'og:title', 'property');
    $this->headMeta($this->escape($category['categoryUrl']), 'og:url', 'property');
